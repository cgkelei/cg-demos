<Shader name="CubeMapVS" stage="Vertex" entry="main">
	<ShaderSource>
	<![CDATA[
	
#version 330

uniform mat4 WorldViewProj;

in vec3 Position;
out vec3 oTex;

void main()
{
	oTex = Position.xyz;
	gl_Position = vec4(Position, 1.0) * ;
	
	// we set z = w so that z/w == 1, always on far plane
	gl_Position.z = gl_Position.w;
}
	]]>
	</ShaderSource>
</Shader>

<Shader name="CubeMapPS" stage="Pixel" entry="main">
	<ShaderSource>
	<![CDATA[
	
#version 330

uniform samplerCube EnvTex;

in  vec3 oTex;
out vec4 oFragColor;

void main()
{
	oFragColor = textureLod(EnvTex, oTex, 0);
}
	]]>
	</ShaderSource>
</Shader>

<Technique name="SkyCubeMap">
	<Pass name="p0">
		<!-- Make sure we set depth func to LessEqual, Otherwise normalized z value 1 will fail depth test -->
		<State name="DepthFunc" value="LessEqual"/>
		<VertexShader name="CubeMapVS"/>
		<PixelShader name="CubeMapPS"/>
	</Pass>
</Technique>

</Effect>